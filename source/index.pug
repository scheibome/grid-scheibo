        +column(['2/5@tablet'])
      div(class="o-row@400 o-row--between@400 o-row--vertical-align")
        +column(['1/2@400', 'full@desktop'])
        +column(['1/2@400', 'full@desktop'])
        +column(['1/3@400', '1/6@desktop'])
