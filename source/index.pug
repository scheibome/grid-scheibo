include pug/mixins
include pug/examples

doctype html
html
  head
    meta(charset='utf-8')
    title Grid-Scheibo - A Simple SCSS Grid Based on CSS-Grid or Flexbox
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='icon', href='i/favicon.png', type='image/x-icon')
    // Google Fonts
    link(href='https://fonts.googleapis.com/css?family=DM+Sans:100,200,300,400,600,500,700,800,900|DM+Sans:100,200,300,400,500,600,700,800,900&subset=latin', rel='stylesheet')
