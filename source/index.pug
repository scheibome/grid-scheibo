mixin column($size)
  - var classname = '';
  each val in $size
    - classname += 'o-row__col-' + val + ' '
  div(class=classname)
    p #{$size}

doctype html
html
  head
    title Grid-Scheibo - a simple scss grid based on flexbox
    meta(charset='utf-8')
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="demo.css")
  body
    h1 Grid-Scheibo - a simple scss grid based on flexbox

    .container
      div(class="o-row@tablet o-row--between@tablet o-row--vertical-align")
        +column(['1/2@tablet', '1/4@desktop'])
        +column(['1/2@tablet', '1/4@desktop'])
        +column(['1/2@tablet', '1/4@desktop'])
        +column(['1/2@tablet', '1/4@desktop'])
        +column(['1/2@tablet', '1/5@desktop'])
        +column(['1/2@tablet', '1/5@desktop'])
        +column(['1/3@tablet', '1/5@desktop'])
        +column(['1/3@tablet', '1/5@desktop'])
        +column(['1/3@tablet', '1/5@desktop'])
        +column(['1/4@tablet'])
        +column(['1/4@tablet'])
        +column(['1/4@tablet'])
        +column(['1/4@tablet'])
        +column(['3/4@tablet'])
        +column(['1/4@tablet'])
        +column(['1/4@tablet'])
        +column(['3/4@tablet'])
        +column(['2/5@tablet'])
        +column(['3/5@tablet'])
        +column(['3/5@tablet'])
        +column(['2/5@tablet'])
      div(class="o-row@400 o-row--between@400 o-row--vertical-align")
        +column(['1/2@400', 'full@desktop'])
        +column(['1/2@400', 'full@desktop'])
        +column(['1/3@400', '1/6@desktop'])
        +column(['1/3@400', '1/6@desktop'])
        +column(['1/3@400', '1/6@desktop'])
        +column(['1/3@400', '1/6@desktop'])
        +column(['1/3@400', '1/6@desktop'])
        +column(['1/3@400', '1/6@desktop'])
